generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String        @id @default(cuid())
  name              String?
  email             String?       @unique
  emailVerified     DateTime?
  image             String?
  discordId         String?       @unique
  discordName       String?
  team              String?
  division          Division?
  lastEditAt        DateTime?
  isProfileComplete Boolean       @default(false)
  isBanned          Boolean       @default(false)
  banReason         String?
  bannedAt          DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  accounts              Account[]
  editRequests          EditRequest[]
  clanEditRequests      ClanEditRequest[]
  playerCreateRequests  PlayerCreateRequest[]
  ratings               Rating[]
  sessions              Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Player {
  id           String         @id @default(cuid())
  name         String         @unique
  category     PlayerCategory
  nationality  String?
  clan         String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  bio          String?
  avatar       String?
  division     Division?
  isLegend     Boolean        @default(false)
  legendRating Float?         // Fixed rating for legends (their prime)
  editRequests EditRequest[]
  ratings      Rating[]
}

model Clan {
  id        String   @id @default(cuid())
  name      String   @unique
  shortName String   @unique
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rating {
  id        String   @id @default(cuid())
  score     Int
  raterId   String
  playerId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  rater     User     @relation(fields: [raterId], references: [id], onDelete: Cascade)
  
  @@unique([raterId, playerId])
}

model EditRequest {
  id                   String          @id @default(cuid())
  playerId             String
  userId               String
  suggestedName        String?
  suggestedClan        String?
  suggestedNationality String?
  suggestedBio         String?
  status               RequestStatus   @default(PENDING)
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  suggestedAvatar      String?
  suggestedDivision    Division?
  suggestedCategory    PlayerCategory?
  player               Player          @relation(fields: [playerId], references: [id], onDelete: Cascade)
  user                 User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ClanEditRequest {
  id                String        @id @default(cuid())
  clanId            String?       // Optional - might be for a new clan
  clanShortName     String        // The clan identifier
  userId            String
  suggestedName     String?
  suggestedShortName String?
  suggestedLogo     String?
  status            RequestStatus @default(PENDING)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PlayerCreateRequest {
  id          String          @id @default(cuid())
  userId      String
  playerName  String
  category    PlayerCategory
  division    Division?
  nationality String?
  clan        String?
  bio         String?
  avatar      String?
  isLegend    Boolean         @default(false)
  legendRating Float?
  status      RequestStatus   @default(PENDING)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Division {
  A
  B
  C
  D
  E
  F
  G
  H
  I
  J
}

enum PlayerCategory {
  INFANTRY
  CAVALRY
  ARCHER
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// Historical ranking snapshots
model RankingPeriod {
  id          String              @id @default(cuid())
  name        String              @unique // e.g., "December 2025"
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime            @default(now())
  rankings    HistoricalRanking[]
}

model HistoricalRanking {
  id            String        @id @default(cuid())
  periodId      String
  playerId      String
  playerName    String        // Denormalized for history
  category      PlayerCategory
  clan          String?
  nationality   String?
  averageRating Float
  totalRatings  Int
  rank          Int
  period        RankingPeriod @relation(fields: [periodId], references: [id], onDelete: Cascade)

  @@unique([periodId, playerId])
}

// Settings for ranking period timer
model SiteSettings {
  id                  String    @id @default("settings")
  currentPeriodEnd    DateTime?
  currentPeriodName   String?
  skippedAnomalies    String[]  @default([]) // Array of rating IDs that were marked as safe/valid
}

// Saved Dream Teams
model SavedTeam {
  id        String   @id @default(cuid())
  userId    String
  name      String
  playerIds String[] // Array of 6 player IDs
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
}

// Curated Ranking System
model CuratedSession {
  id          String   @id @default(cuid())
  playerId    String   // The player being rated
  playerName  String   // Denormalized
  category    PlayerCategory
  nationality String?
  clan        String?
  isActive    Boolean  @default(true) // Only one active session at a time
  isConfirmed Boolean  @default(false) // Streamer confirmed
  finalRating Float?   // Final confirmed rating
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ratings     CuratedRating[]
}

model CuratedRating {
  id          String         @id @default(cuid())
  sessionId   String
  raterName   String         // The name entered by the rater
  score       Int?           // Can be null while typing
  note        String?        // Optional note about the player (max 280 chars)
  confirmed   Boolean        @default(false) // Whether the rater has confirmed their rating
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  session     CuratedSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, raterName])
}

model CuratedRanking {
  id          String         @id @default(cuid())
  playerId    String         @unique
  playerName  String
  category    PlayerCategory
  nationality String?
  clan        String?
  rating      Float
  confirmedAt DateTime       @default(now())
}
