generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String        @id @default(cuid())
  name              String?
  email             String?       @unique
  emailVerified     DateTime?
  image             String?
  discordId         String?       @unique
  discordName       String?
  team              String?
  division          Division?
  lastEditAt        DateTime?
  isProfileComplete Boolean       @default(false)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  accounts              Account[]
  editRequests          EditRequest[]
  clanEditRequests      ClanEditRequest[]
  playerCreateRequests  PlayerCreateRequest[]
  ratings               Rating[]
  sessions              Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Player {
  id           String         @id @default(cuid())
  name         String         @unique
  category     PlayerCategory
  nationality  String?
  clan         String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  bio          String?
  avatar       String?
  division     Division?
  editRequests EditRequest[]
  ratings      Rating[]
}

model Clan {
  id        String   @id @default(cuid())
  name      String   @unique
  shortName String   @unique
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rating {
  id        String   @id @default(cuid())
  score     Int
  raterId   String
  playerId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  rater     User     @relation(fields: [raterId], references: [id], onDelete: Cascade)

  @@unique([raterId, playerId])
}

model EditRequest {
  id                   String          @id @default(cuid())
  playerId             String
  userId               String
  suggestedName        String?
  suggestedClan        String?
  suggestedNationality String?
  suggestedBio         String?
  status               RequestStatus   @default(PENDING)
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  suggestedAvatar      String?
  suggestedDivision    Division?
  suggestedCategory    PlayerCategory?
  player               Player          @relation(fields: [playerId], references: [id], onDelete: Cascade)
  user                 User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ClanEditRequest {
  id                String        @id @default(cuid())
  clanId            String?       // Optional - might be for a new clan
  clanShortName     String        // The clan identifier
  userId            String
  suggestedName     String?
  suggestedShortName String?
  suggestedLogo     String?
  status            RequestStatus @default(PENDING)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PlayerCreateRequest {
  id          String          @id @default(cuid())
  userId      String
  playerName  String
  category    PlayerCategory
  division    Division?
  nationality String?
  clan        String?
  bio         String?
  avatar      String?
  status      RequestStatus   @default(PENDING)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Division {
  A
  B
  C
  D
  E
  F
  G
  H
  I
  J
}

enum PlayerCategory {
  INFANTRY
  CAVALRY
  ARCHER
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}
